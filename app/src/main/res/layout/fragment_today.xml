    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_today"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="122dp"
        android:paddingLeft="@dimen/margin_h3"
        android:paddingTop="@dimen/margin_h2"
        android:paddingRight="@dimen/margin_h3" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_action_add"
        android:layout_marginBottom="135dp"
        android:layout_marginRight="@dimen/margin_15"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/linear_empty_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_text_height"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/radio_group_height"
            android:src="@drawable/ic_action_empty" />

        <TextView
            android:id="@+id/txt_empty_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_h3"
            android:gravity="center"
            android:text="@string/there_are_no_jobs_available_now"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_h5" />



    </LinearLayout>


</RelativeLayout>
